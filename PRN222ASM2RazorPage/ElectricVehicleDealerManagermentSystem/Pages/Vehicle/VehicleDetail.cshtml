@page
@model ElectricVehicleDealerManagermentSystem.Pages.Vehicle.VehicleDetailModel

@{
    ViewData["Title"] = Model.Vehicle?.Model ?? "Vehicle Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/CarDetail.css" asp-append-version="true" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.1);
        }
        .vehicle-image {
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
            transition: transform 0.3s ease;
        }
        .vehicle-image:hover {
            transform: scale(1.02);
        }
        .spec-card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .info-badge {
            background: linear-gradient(135deg, var(--success), #28a745);
            color: white;
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
        }
        .action-btn {
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        .dashboard-card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .stat-item {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease;
        }
        .stat-item:hover {
            transform: translateY(-5px);
        }
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: white;
            font-size: 1.5rem;
        }
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }
    </style>
}

<div class="min-vh-100" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
    <div class="container-fluid py-5">
        <!-- Back Button -->
        <div class="row mb-4">
            <div class="col-12">
                <a asp-page="/Vehicle/Browse" class="btn btn-outline-primary rounded-pill px-4 py-2 shadow-sm hover-lift">
                    <i class="fas fa-arrow-left me-2"></i>Back to Browse
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success border-0 shadow-lg rounded-4 mb-4" style="background: linear-gradient(135deg, #d4edda, #c3e6cb);">
                <div class="d-flex align-items-center">
                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <i class="fas fa-check text-white"></i>
                    </div>
                    <div>@Model.SuccessMessage</div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger border-0 shadow-lg rounded-4 mb-4" style="background: linear-gradient(135deg, #f8d7da, #f5c6cb);">
                <div class="d-flex align-items-center">
                    <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <i class="fas fa-exclamation-triangle text-white"></i>
                    </div>
                    <div>@Model.ErrorMessage</div>
                </div>
            </div>
        }

        @if (Model.Vehicle != null)
        {
            <!-- Hero Section -->
            <div class="hero-section rounded-4 mb-5 p-5 position-relative">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h1 class="display-4 fw-bold mb-3">@Model.Vehicle.Model</h1>
                        <p class="lead mb-4 opacity-75">@Model.Vehicle.CategoryName - Premium Electric Vehicle</p>
                        <div class="d-flex gap-3 mb-4">
                            <span class="info-badge">
                                <i class="fas fa-tag me-2"></i>@Model.Vehicle.CategoryName
                            </span>
                            <span class="info-badge">
                                <i class="fas fa-palette me-2"></i>@Model.Vehicle.Color
                            </span>
                            <span class="info-badge">
                                <i class="fas fa-calendar me-2"></i>@Model.Vehicle.ManufactureDate.Year
                            </span>
                        </div>
                        <div class="h2 fw-bold text-white">@Model.Vehicle.Price.ToString("C0")</div>
                    </div>
                    <div class="col-lg-6">
                        <img src="@(string.IsNullOrEmpty(Model.Vehicle.Image) ? "https://images.unsplash.com/photo-1619405399517-d7fce0f13302?w=800" : Model.Vehicle.Image)"
                             alt="@Model.Vehicle.Model"
                             class="img-fluid vehicle-image w-100" />
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <!-- Vehicle Specifications -->
                <div class="col-lg-8">
                    <div class="spec-card p-5">
                        <h3 class="fw-bold mb-4" style="color: var(--primary);">
                            <i class="fas fa-info-circle me-2" style="color: var(--accent);"></i>Vehicle Specifications
                        </h3>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="fas fa-car"></i>
                                    </div>
                                    <h5 class="fw-bold" style="color: var(--primary);">@Model.Vehicle.Model</h5>
                                    <p class="text-muted mb-0">Vehicle Model</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="fas fa-palette"></i>
                                    </div>
                                    <h5 class="fw-bold" style="color: var(--primary);">@Model.Vehicle.Color</h5>
                                    <p class="text-muted mb-0">Color</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <h5 class="fw-bold" style="color: var(--primary);">@Model.Vehicle.CategoryName</h5>
                                    <p class="text-muted mb-0">Category</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <h5 class="fw-bold" style="color: var(--primary);">@Model.Vehicle.ManufactureDate.ToString("yyyy")</h5>
                                    <p class="text-muted mb-0">Manufacture Year</p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Vehicle.Version))
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="stat-item">
                                        <div class="stat-icon">
                                            <i class="fas fa-cog"></i>
                                        </div>
                                        <h5 class="fw-bold" style="color: var(--primary);">@Model.Vehicle.Version</h5>
                                        <p class="text-muted mb-0">Version</p>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Additional Details -->
                        <div class="row mt-5">
                            <div class="col-12">
                                <h4 class="fw-bold mb-3" style="color: var(--primary);">
                                    <i class="fas fa-clipboard-list me-2" style="color: var(--accent);"></i>Detailed Information
                                </h4>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="fas fa-hashtag text-white"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">Vehicle ID</div>
                                                <small class="text-muted">@Model.Vehicle.Id.ToString().PadLeft(12, '0')</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="fas fa-check text-white"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">Status</div>
                                                <small class="text-muted">Available</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dashboard Sidebar -->
                <div class="col-lg-4">
                    <div class="dashboard-card p-4">
                        <!-- Vehicle Summary -->
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3" style="color: var(--primary);">
                                <i class="fas fa-clipboard-list me-2" style="color: var(--accent);"></i>Order Summary
                            </h6>

                            <div class="bg-light rounded-3 p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-semibold">Vehicle:</span>
                                    <span class="text-primary">@Model.Vehicle.Model</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-semibold">Color:</span>
                                    <span>@Model.Vehicle.Color</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-semibold">Year:</span>
                                    <span>@Model.Vehicle.ManufactureDate.Year</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-semibold">Category:</span>
                                    <span>@Model.Vehicle.CategoryName</span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Vehicle.Version))
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-semibold">Version:</span>
                                        <span>@Model.Vehicle.Version</span>
                                    </div>
                                }
                            </div>

                            <!-- Pricing Breakdown -->
                            <div class="border-top pt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-semibold">Vehicle Price:</span>
                                    <span class="text-success fw-bold">@Model.Vehicle.Price.ToString("C0")</span>
                                </div>
                                <hr class="my-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold fs-6">Total Amount:</span>
                                    <span class="fw-bold text-primary fs-5">@((Model.Vehicle.Price).ToString("C0"))</span>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-3">
                            @if (Model.IsUserLoggedIn)
                            {
                                @if (Model.UserRole == "customer")
                                {
                                    <form method="post" asp-page-handler="Buy">
                                        <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                        <button type="submit"
                                                class="btn btn-primary action-btn w-100"
                                                onclick="return confirm('Are you sure you want to purchase this vehicle for @((Model.Vehicle.Price).ToString("C0")) (including tax)?')">
                                            <i class="fas fa-shopping-cart me-2"></i>Buy Now - @((Model.Vehicle.Price).ToString("C0"))
                                        </button>
                                    </form>

                                    <a href="/appointment/create?vehicleId=@Model.Vehicle.Id"
                                       class="btn btn-outline-primary action-btn w-100">
                                        <i class="fas fa-calendar-check me-2"></i>Book Appointment
                                    </a>
                                }
                            }
                            else
                            {
                                <a asp-page="/Credential/Login" class="btn btn-primary action-btn w-100 mb-2">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login to Buy
                                </a>
                                <a asp-page="/Credential/Register" class="btn btn-outline-primary action-btn w-100">
                                    <i class="fas fa-user-plus me-2"></i>Register Now
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Vehicle Not Found -->
            <div class="text-center py-5">
                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4 shadow-lg" style="width: 120px; height: 120px;">
                    <i class="fas fa-car text-muted fa-4x"></i>
                </div>
                <h3 class="text-muted mb-3">Vehicle Not Found</h3>
                <p class="text-muted mb-4">The requested vehicle could not be found or may have been removed.</p>
                <a asp-page="/Vehicle/Browse" class="btn btn-primary rounded-pill px-5 py-3 fw-semibold hover-lift">
                    <i class="fas fa-arrow-left me-2"></i>Back to Browse
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="/js/CarDetail.js"></script>
}



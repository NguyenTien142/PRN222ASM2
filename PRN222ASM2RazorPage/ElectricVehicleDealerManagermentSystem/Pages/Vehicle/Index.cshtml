@page "/vehicles"
@model ElectricVehicleDealerManagermentSystem.Pages.Vehicle.IndexModel
@{
    ViewData["Title"] = "Vehicle Management";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold mb-0" style="color: var(--primary);">
                <i class="fas fa-car me-2" style="color: var(--accent);"></i> Vehicle Management
            </h2>
            <p class="text-muted">Manage, filter, and update vehicle listings</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="./Create" class="btn btn-accent rounded-3 shadow-sm">
                <i class="fas fa-plus me-2"></i>Add New Vehicle
            </a>
        </div>
    </div>
    <!-- Filter and Search -->
    <form method="get" class="row align-items-end mb-4">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Category</label>
            <select asp-for="CategoryFilter" asp-items="Model.CategorySelectList" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">Search</label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Search by model, color, or version..." />
        </div>
        <div class="col-md-2 form-check mt-4">
            <input asp-for="ShowDeleted" class="form-check-input" type="checkbox" id="showDeletedCheck" />
            <label class="form-check-label" for="showDeletedCheck">Show Deleted</label>
        </div>
        <div class="col-md-2 text-end mt-4">
            <button type="submit" class="btn btn-primary w-100 rounded-pill">
                <i class="fas fa-filter me-2"></i>Apply Filters
            </button>
        </div>
    </form>
    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success rounded-3 shadow-sm alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger rounded-3 shadow-sm alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <!-- Vehicle Table -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="card-title mb-0"><i class="fas fa-list me-2" style="color: var(--accent);"></i>Vehicle List</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Vehicles != null && Model.Vehicles.Count > 0)
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Model</th>
                            <th>Category</th>
                            <th>Color</th>
                            <th>Price</th>
                            <th>Manufacture Date</th>
                            <th>Version</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in Model.Vehicles)
                        {
                            <tr class="@(vehicle.IsDeleted ? "table-danger" : "")">
                                <td>@vehicle.Id</td>
                                <td style="color: var(--primary); font-weight: 600;">@vehicle.Model</td>
                                <td>@vehicle.CategoryName</td>
                                <td>@vehicle.Color</td>
                                <td>@vehicle.Price.ToString("C")</td>
                                <td>@vehicle.ManufactureDate.ToString("yyyy-MM-dd")</td>
                                <td>@(string.IsNullOrEmpty(vehicle.Version) ? "-" : vehicle.Version)</td>
                                <td>
                                    @if (vehicle.IsDeleted)
                                    {
                                        <span class="badge bg-danger rounded-pill px-3">Deleted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success rounded-pill px-3">Active</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (!vehicle.IsDeleted)
                                    {
                                        <a asp-page="./Update" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning rounded-pill me-2 px-3">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@vehicle.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3" onclick="return confirm('Are you sure you want to delete this vehicle?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Restore" asp-route-id="@vehicle.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">
                                                <i class="fas fa-undo"></i> Restore
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="fas fa-info-circle me-2"></i>No vehicles found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

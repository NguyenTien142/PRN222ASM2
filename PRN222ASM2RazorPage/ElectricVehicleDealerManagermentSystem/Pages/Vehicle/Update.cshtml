@page "/vehicles/update/{id:int}"
@model ElectricVehicleDealerManagermentSystem.Pages.Vehicle.UpdateModel
@{
    ViewData["Title"] = "Update Vehicle";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Index" class="text-decoration-none">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="/Vehicle/Index" class="text-decoration-none">
                            Vehicles
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Update Vehicle
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0">
                <i class="fas fa-edit"></i> Update Vehicle
            </h5>
        </div>

        <div class="card-body p-4">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <!-- Important: enctype for file uploads -->
            <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="VehicleInput.Id" />

                <div class="row g-3">
                    <!-- Category -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="VehicleInput.CategoryId" class="form-select" asp-items="Model.CategorySelectList">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="VehicleInput.CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Model -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.Model" class="form-label fw-semibold"></label>
                        <input asp-for="VehicleInput.Model" class="form-control" />
                        <span asp-validation-for="VehicleInput.Model" class="text-danger"></span>
                    </div>

                    <!-- Color -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.Color" class="form-label fw-semibold"></label>
                        <input asp-for="VehicleInput.Color" class="form-control" />
                        <span asp-validation-for="VehicleInput.Color" class="text-danger"></span>
                    </div>

                    <!-- Version -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.Version" class="form-label fw-semibold"></label>
                        <input asp-for="VehicleInput.Version" class="form-control" />
                        <span asp-validation-for="VehicleInput.Version" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.Price" class="form-label fw-semibold"></label>
                        <input asp-for="VehicleInput.Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="VehicleInput.Price" class="text-danger"></span>
                    </div>

                    <!-- Manufacture Date -->
                    <div class="col-md-6">
                        <label asp-for="VehicleInput.ManufactureDate" class="form-label fw-semibold"></label>
                        <input asp-for="VehicleInput.ManufactureDate" class="form-control" type="date" />
                        <span asp-validation-for="VehicleInput.ManufactureDate" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="col-md-12">
                        <label asp-for="UploadedImage" class="form-label fw-semibold">Upload New Image</label>
                        <input asp-for="UploadedImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="UploadedImage" class="text-danger"></span>

                        @if (!string.IsNullOrEmpty(Model.OriginalVehicle?.Image))
                        {
                            <div class="mt-3 text-center">
                                <p class="fw-semibold">Current Image:</p>
                                <img src="@Model.OriginalVehicle.Image" alt="Vehicle Image"
                                     class="img-thumbnail rounded-3 shadow-sm"
                                     style="max-width: 300px;" id="currentImage" />
                            </div>
                        }

                        <img id="previewImage" class="mt-3 rounded shadow-sm" style="max-height:200px; display:none;" />
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a asp-page="/Vehicle/Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Vehicle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview newly selected image
        document.getElementById("UploadedImage").addEventListener("change", function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById("previewImage");
            const current = document.getElementById("currentImage");
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = "block";
                if (current) current.style.opacity = "0.5";
            } else {
                preview.style.display = "none";
                if (current) current.style.opacity = "1";
            }
        });
    </script>
}

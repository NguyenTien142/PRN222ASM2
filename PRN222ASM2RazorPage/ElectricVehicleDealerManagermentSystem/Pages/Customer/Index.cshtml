@page
@model ElectricVehicleDealerManagermentSystem.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold" style="color: var(--primary);">
                <i class="fas fa-user-circle me-2" style="color: var(--accent);"></i>
                Welcome, @Model.CustomerName!
            </h2>
            <p class="text-muted">Your Customer ID: <strong>@Model.CustomerId</strong></p>
        </div>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4 justify-content-center">
        <!-- Browse Vehicles -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-car fa-3x mb-3" style="color: var(--primary);"></i>
                    <h5 class="card-title fw-semibold">Browse Vehicles</h5>
                    <p class="card-text text-muted">Explore our wide range of electric vehicles available for purchase.</p>
                    <a asp-page="/Vehicle/Browse" class="btn btn-primary w-100 rounded-pill">
                        <i class="fas fa-arrow-right me-1"></i> View Vehicles
                    </a>
                </div>
            </div>
        </div>

        <!-- My Orders -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-bag fa-3x mb-3" style="color: var(--info);"></i>
                    <h5 class="card-title fw-semibold">My Orders</h5>
                    <p class="card-text text-muted">Track your orders and delivery status. Mark orders as received.</p>
                    <a asp-page="/Customer/MyOrders" class="btn btn-info text-white w-100 rounded-pill">
                        <i class="fas fa-shopping-bag me-1"></i> View My Orders
                    </a>
                </div>
            </div>
        </div>

        <!-- My Appointments -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar fa-3x mb-3" style="color: var(--success);"></i>
                    <h5 class="card-title fw-semibold">My Appointments</h5>
                    <p class="card-text text-muted">Schedule or view your upcoming test drives and consultations.</p>
                    <a asp-page="/Appointment/Index" class="btn btn-success w-100 rounded-pill">
                        <i class="fas fa-calendar-check me-1"></i> Manage Appointments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

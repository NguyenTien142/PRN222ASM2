@page
@model ElectricVehicleDealerManagermentSystem.Pages.Credential.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create Account</h3>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-1"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-1"></i> @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Username -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.Username" class="form-label">
                                <i class="fas fa-user me-1"></i> Username
                            </label>
                            <input asp-for="Input.Username" class="form-control" placeholder="Enter a username" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-1"></i> Password
                            </label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter a password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i> Confirm Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="form-group mb-4">
                            <label asp-for="Input.RoleId" class="form-label">
                                <i class="fas fa-user-tag me-1"></i> Register as
                            </label>
                            <select asp-for="Input.RoleId" asp-items="Model.RoleOptions" class="form-select" id="roleSelect">
                                <option value="">-- Select a role --</option>
                            </select>
                            <span asp-validation-for="Input.RoleId" class="text-danger"></span>
                        </div>

                        <!-- Customer Fields -->
                        <div id="customerFields" class="border rounded-3 p-3 mb-3 bg-light d-none">
                            <h5 class="text-primary"><i class="fas fa-user me-1"></i> Customer Information</h5>

                            <div class="form-group mb-3">
                                <label asp-for="Input.CustomerName" class="form-label">Full Name</label>
                                <input asp-for="Input.CustomerName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="Input.CustomerName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.CustomerPhone" class="form-label">Phone Number</label>
                                <input asp-for="Input.CustomerPhone" class="form-control" placeholder="Enter your phone number" />
                                <span asp-validation-for="Input.CustomerPhone" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.CustomerEmail" class="form-label">Email Address</label>
                                <input asp-for="Input.CustomerEmail" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="Input.CustomerEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.CustomerAddress" class="form-label">Address</label>
                                <input asp-for="Input.CustomerAddress" class="form-control" placeholder="Enter your address" />
                                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Dealer Fields -->
                        <div id="dealerFields" class="border rounded-3 p-3 mb-3 bg-light d-none">
                            <h5 class="text-success"><i class="fas fa-warehouse me-1"></i> Dealer Information</h5>

                            <div class="form-group mb-3">
                                <label asp-for="Input.DealerName" class="form-label">Dealer Name</label>
                                <input asp-for="Input.DealerName" class="form-control" placeholder="Enter dealer name" />
                                <span asp-validation-for="Input.DealerName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.DealerAddress" class="form-label">Dealer Address</label>
                                <input asp-for="Input.DealerAddress" class="form-control" placeholder="Enter dealer address" />
                                <span asp-validation-for="Input.DealerAddress" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.DealerQuantity" class="form-label">Initial Vehicle Quantity</label>
                                <input asp-for="Input.DealerQuantity" class="form-control" placeholder="Enter initial quantity" type="number" min="0" />
                                <span asp-validation-for="Input.DealerQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-user-plus me-1"></i> Register
                        </button>

                        <div class="text-center mt-3">
                            <span>Already have an account?</span>
                            <a href="/Credential/Login" class="text-primary fw-bold text-decoration-none">Login here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Role-based form toggle
        document.getElementById('roleSelect').addEventListener('change', function () {
            const customerFields = document.getElementById('customerFields');
            const dealerFields = document.getElementById('dealerFields');
            const selected = this.value;

            if (selected === "1") { // Customer
                customerFields.classList.remove('d-none');
                dealerFields.classList.add('d-none');
            } else if (selected === "2") { // Dealer
                dealerFields.classList.remove('d-none');
                customerFields.classList.add('d-none');
            } else {
                customerFields.classList.add('d-none');
                dealerFields.classList.add('d-none');
            }
        });
    </script>
}
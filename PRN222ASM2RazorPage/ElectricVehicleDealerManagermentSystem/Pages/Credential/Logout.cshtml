@page
@model ElectricVehicleDealerManagermentSystem.Pages.Credential.LogoutModel
@{
    ViewData["Title"] = "Logout";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow text-center p-4">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Logging out...</span>
                </div>
                <h5>Logging out...</h5>
                <p class="text-muted">Please wait while we sign you out.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Automatically redirect to login after 1.5 seconds
        setTimeout(function () {
            window.location.href = '/Credential/Login';
        }, 1500);
    </script>
}

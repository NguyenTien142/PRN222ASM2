@page "/appointment/manage"
@model ElectricVehicleDealerManagermentSystem.Pages.Appointment.manageModel
@{
    ViewData["Title"] = "Manage Appointments";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary"><i class="fas fa-calendar-alt me-2"></i>Manage Appointments</h3>
            <p class="text-muted mb-0">Welcome, @Model.DealerName</p>
        </div>
        <div>
            <span class="badge bg-info fs-6">
                Total: @Model.Appointments.Count appointments
            </span>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select asp-for="StatusFilter" asp-items="Model.StatusSelectList" class="form-select"></select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Customer Name</label>
                    <input asp-for="CustomerNameFilter" class="form-control" placeholder="Enter name..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-2"></i>Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointment List -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-list me-2"></i>Appointments
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Vehicle</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th style="width: 260px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Appointments.Any())
                        {
                            var index = 1;
                            foreach (var appt in Model.Appointments)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@appt.CustomerName</td>
                                    <td>@appt.CustomerEmail</td>
                                    <td>@appt.VehicleModel</td>
                                    <td>@appt.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="@Model.GetStatusBadgeClass(appt.Status)">
                                            @appt.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (Model.CanApproveAppointment(appt.Status))
                                            {
                                                <form method="post" asp-page-handler="ApproveAppointment" asp-route-appointmentId="@appt.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-success btn-sm" 
                                                            onclick="return confirm('Are you sure you want to approve this appointment?')">
                                                        <i class="fas fa-check me-1"></i>Approve
                                                    </button>
                                                </form>
                                            }
                                            @if (Model.CanCancelAppointment(appt.Status))
                                            {
                                                <form method="post" asp-page-handler="CancelAppointment" asp-route-appointmentId="@appt.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm" 
                                                            onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                        <i class="fas fa-times me-1"></i>Cancel
                                                    </button>
                                                </form>
                                            }
                                            @if (Model.CanStartAppointment(appt.Status, appt.AppointmentDate))
                                            {
                                                <form method="post" asp-page-handler="StartAppointment" asp-route-appointmentId="@appt.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-info btn-sm text-white"
                                                            onclick="return confirm('Are you sure you want to start this appointment?')">
                                                        <i class="fas fa-play me-1"></i>Start
                                                    </button>
                                                </form>
                                            }
                                            @if (Model.CanCompleteAppointment(appt.Status))
                                            {
                                                <form method="post" asp-page-handler="CompleteAppointment" asp-route-appointmentId="@appt.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-primary btn-sm"
                                                            onclick="return confirm('Are you sure you want to complete this appointment?')">
                                                        <i class="fas fa-flag-checkered me-1"></i>Complete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                        @if (!Model.CanApproveAppointment(appt.Status) && 
                                             !Model.CanCancelAppointment(appt.Status) &&
                                             !Model.CanStartAppointment(appt.Status, appt.AppointmentDate) && 
                                             !Model.CanCompleteAppointment(appt.Status))
                                        {
                                            <small class="text-muted"></small>
                                        }
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No appointments found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Action Rules -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h6 class="fw-bold mb-2">Action Rules:</h6>
            <ul class="list-unstyled small">
                <li><strong>Approve:</strong> Only PENDING appointments</li>
                <li><strong>Cancel:</strong> Only PENDING appointments</li>
                <li><strong>Start:</strong> Only APPROVED appointments within time window (30 min before to 2 hours after)</li>
                <li><strong>Complete:</strong> Only RUNNING appointments</li>
                <li><strong>Auto-Expire:</strong> APPROVED appointments automatically expire after their scheduled time</li>
            </ul>
        </div>
    </div>
</div>

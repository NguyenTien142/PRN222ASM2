@page "/appointment"
@model ElectricVehicleDealerManagermentSystem.Pages.Appointment.IndexModel
@{
    ViewData["Title"] = "My Appointments";
}

<div class="bg-body-tertiary py-5 min-vh-100 d-flex flex-column justify-content-start align-items-center" style="background: #f6f7fa;">
    <div class="container-lg">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold mb-1" style="color: var(--primary);">
                    <i class="fas fa-calendar-alt me-2" style="color: var(--accent);"></i>My Appointments
                </h3>
                <p class="text-muted mb-0">Welcome, @Model.CustomerName</p>
            </div>
            <a href="/appointment/create" class="btn btn-accent rounded-3 shadow-sm px-4"><i class="fas fa-plus-circle me-1"></i> New Appointment</a>
        </div>
        <!-- Success / Error Messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage)) {
            <div class="alert alert-danger rounded-3 shadow-sm">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage)) {
            <div class="alert alert-success rounded-3 shadow-sm">@Model.SuccessMessage</div>
        }
        <!-- Filters -->
        <div class="card mb-4 shadow-sm border-0 rounded-4 bg-light">
            <div class="card-header bg-info text-white rounded-top-4">
                <i class="fas fa-filter me-2"></i>Filter Appointments
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Status</label>
                        <select asp-for="StatusFilter" asp-items="Model.StatusSelectList" class="form-select rounded-pill"></select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-3 align-self-end">
                        <button type="submit" class="btn btn-primary w-100 rounded-pill">
                            <i class="fas fa-search me-1"></i>Apply Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Appointment List -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4">
                <i class="fas fa-list me-2"></i>Your Appointments
            </div>
            <div class="card-body bg-white rounded-bottom-4 p-0">
                @if (Model.Appointments == null || !Model.Appointments.Any()) {
                    <p class="text-muted text-center my-4"><i class="fas fa-info-circle me-2"></i>No appointments found.</p>
                } else {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle rounded-3 mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Vehicle</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.Appointments) {
                                    <tr>
                                        <td>@appointment.Id</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@appointment.VehicleImage" alt="@appointment.VehicleModel" class="rounded shadow-sm me-2" style="width: 60px; height: 40px; object-fit: cover; border: 2px solid var(--background);" />
                                                <div><div class="fw-semibold" style="color: var(--primary);">@appointment.VehicleModel (@appointment.VehicleColor)</div>
                                                    <div class="text-muted small">@appointment.VehicleCategoryName - $@appointment.VehiclePrice:N0</div></div>
                                            </div>
                                        </td>
                                        <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td><span class="@Model.GetStatusBadgeClass(appointment.Status) rounded-pill px-3 py-1 shadow-sm">@appointment.Status</span></td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                @if (Model.CanCancelAppointment(appointment.Status)) {
                                                    <form method="post" asp-page-handler="CancelAppointment" asp-route-appointmentId="@appointment.Id" class="d-inline">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3" onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                            <i class="fas fa-times me-1"></i>Cancel
                                                        </button>
                                                    </form>
                                                }
                                                @if (Model.CanRescheduleAppointment(appointment.Status)) {
                                                    <a href="/appointment/update/@appointment.Id" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                                        <i class="fas fa-clock me-1"></i>Reschedule
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@page "/appointment"
@model ElectricVehicleDealerManagermentSystem.Pages.Appointment.IndexModel
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary"><i class="fas fa-calendar-alt me-2"></i>My Appointments</h3>
            <p class="text-muted mb-0">Welcome, @Model.CustomerName</p>
        </div>
        <a href="/appointment/create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> New Appointment
        </a>
    </div>

    <!-- Success / Error Messages -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <!-- Filters -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="fas fa-filter me-2"></i>Filter Appointments
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Status</label>
                    <select asp-for="StatusFilter" asp-items="Model.StatusSelectList" class="form-select"></select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
                <div class="col-md-3 align-self-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointment List -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-list me-2"></i>Your Appointments
        </div>
        <div class="card-body">
            @if (Model.Appointments == null || !Model.Appointments.Any())
            {
                <p class="text-muted text-center my-4">No appointments found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Vehicle</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.Appointments)
                            {
                                <tr>
                                    <td>@appointment.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@appointment.VehicleImage" alt="@appointment.VehicleModel"
                                                 class="rounded me-2" style="width: 60px; height: 40px; object-fit: cover;" />
                                            <div>
                                                <div class="fw-semibold">@appointment.VehicleModel (@appointment.VehicleColor)</div>
                                                <div class="text-muted small">@appointment.VehicleCategoryName - $@appointment.VehiclePrice:N0</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <span class="@Model.GetStatusBadgeClass(appointment.Status)">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            @if (Model.CanCancelAppointment(appointment.Status))
                                            {
                                                <form method="post" asp-page-handler="CancelAppointment"
                                                      asp-route-appointmentId="@appointment.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                        <i class="fas fa-times me-1"></i>Cancel
                                                    </button>
                                                </form>
                                            }
                                            @if (Model.CanRescheduleAppointment(appointment.Status))
                                            {
                                                <a href="/appointment/update/@appointment.Id"
                                                   class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-clock me-1"></i>Reschedule
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electric Vehicle Dealer Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="fas fa-bolt text-primary me-2"></i>
                    <strong>EV Dealer</strong>
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>

                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            var roleName = Context.Session.GetString("RoleName")?.ToLower();

                            if (roleName == "customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/Index">
                                        <i class="fas fa-user me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Vehicles/Browse">
                                        <i class="fas fa-car me-1"></i> Browse Vehicles
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Appointments/Index">
                                        <i class="fas fa-calendar me-1"></i> Appointments
                                    </a>
                                </li>
                            }
                            else if (roleName == "dealer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Dealer/Index">
                                        <i class="fas fa-store me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Dealer/Inventory">
                                        <i class="fas fa-boxes me-1"></i> Inventory
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Dealer/Orders">
                                        <i class="fas fa-shopping-cart me-1"></i> Orders
                                    </a>
                                </li>
                            }
                            else if (roleName == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Index">
                                        <i class="fas fa-user-shield me-1"></i> Admin Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Users">
                                        <i class="fas fa-users me-1"></i> Manage Users
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Privacy">
                                    <i class="fas fa-shield-alt me-1"></i> Privacy
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Authentication Section -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            var roleName = Context.Session.GetString("RoleName") ?? "User";
                            var displayName = Context.Session.GetString("CustomerName")
                            ?? Context.Session.GetString("DealerName")
                            ?? Context.Session.GetString("Username")
                            ?? "User";

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center"
                                   href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @displayName (@roleName)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Profile/Index">
                                            <i class="fas fa-id-badge me-1"></i> Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Credential/Logout">
                                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Credential/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Credential/Register">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3 mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Electric Vehicle Dealer Management System
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

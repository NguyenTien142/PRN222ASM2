@page "/categories"
@model ElectricVehicleDealerManagermentSystem.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Vehicle Categories";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold mb-0" style="color: var(--primary);">
                <i class="fas fa-tags me-2" style="color: var(--accent);"></i>
                Vehicle Categories
            </h2>
            <p class="text-muted mb-0">Manage vehicle category types</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-page="./Create" class="btn btn-accent rounded-3 shadow-sm">
                <i class="fas fa-plus me-2"></i>Add New Category
            </a>
        </div>
    </div>
    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success rounded-3 shadow-sm alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger rounded-3 shadow-sm alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Categories Table -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Category List
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category Name</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td style="color: var(--primary); font-weight: 600;">@category.Name</td>
                                    <td class="text-center">
                                        <a asp-page="./Update" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary rounded-pill me-2 px-3">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@category.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="fas fa-info-circle me-2"></i>No categories available.
                </div>
            }
        </div>
    </div>
</div>

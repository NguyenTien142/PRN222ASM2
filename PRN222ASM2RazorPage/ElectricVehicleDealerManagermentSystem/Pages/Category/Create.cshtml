@page "/categories/create"
@model ElectricVehicleDealerManagermentSystem.Pages.Category.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Index" class="text-decoration-none">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="/Category/Index" class="text-decoration-none">
                            Categories
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Create
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Page Header -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h2 class="text-success fw-bold">Create New Vehicle Category</h2>
        </div>
    </div>

    <!-- Display Error or Success Messages -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <!-- Category Form -->
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="CategoryInput.Name" class="form-label">Category Name</label>
                    <input asp-for="CategoryInput.Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="CategoryInput.Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Create Category
                </button>
                <a asp-page="/Category/Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
